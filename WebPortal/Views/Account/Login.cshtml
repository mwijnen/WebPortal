@model Session

<div style="margin-top:100px;margin-left:100px;margin-right:100px;">
    <form asp-controller="Account" asp-action="Login" method="post" class="form-group">

        <div class="form-group row">
            <input asp-for=@Model.Email type="text" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group row">
            <input asp-for=@Model.Password type="password" class="form-control" placeholder="Password" />
        </div>

        <div class="form-group row">
            <input asp-for=@Model.RememberMe type="checkbox" class="form-control" />
        </div>

        <input asp-for=@Model.RedirectUrl type="hidden" value=@Model.RedirectUrl />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>